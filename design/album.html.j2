<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/css/normalize.css">
  <link rel="stylesheet" type="text/css" href="/css/theme.css">
  <link rel="stylesheet" type="text/css" href="/css/album.css">
  <script src="/js/album.js" defer></script>
  <title></title>
</head>
<body>
  <div class="content-container">
    <div class="grid-container">
      <div id="photo-container">
        {% for image in album.images %}
        <div class="photo">
          <a href="/{{ album.name_nav }}/{{ image.remote_uuid }}">
            <img src="{{ img_baseurl }}/{{ image.remote_uuid }}.jpg">
          </a>
        </div>
        {% endfor %}
      </div>

      <div id="photo-column1" class="photo-column"></div>
      <div id="photo-column2" class="photo-column"></div>
      <div id="photo-column3" class="photo-column"></div>
      <div id="photo-column4" class="photo-column"></div>
      <div id="photo-column5" class="photo-column"></div>
    </div>
  </div>
</body>
</html>
